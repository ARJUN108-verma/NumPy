import numpy as np

# Create a NumPy array
arr = np.array([10, 20, 30, 40, 50, 60, 70])

# Print the original array
print("Original Array:")
print(arr)

# Slice from index 1 to 4
print("\nSlice arr[1:5]:")
print(arr[1:5])  # Output: [20 30 40 50]

# Slice from beginning to index 3
print("\nSlice arr[:4]:")
print(arr[:4])  # Output: [10 20 30 40]

# Slice from index 3 to end
print("\nSlice arr[3:]:")
print(arr[3:])  # Output: [40 50 60 70]

# Slice every 2nd element
print("\nSlice arr[::2]:")
print(arr[::2])  # Output: [10 30 50 70]

# Reverse the array
print("\nReverse arr[::-1]:")
print(arr[::-1])  # Output: [70 60 50 40 30 20 10]
